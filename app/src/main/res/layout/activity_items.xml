<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raajesharunachalam.taskmanager.ItemsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_tasks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_tasks_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/recycle_tasks"
        app:layout_constraintRight_toRightOf="@id/recycle_tasks"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"/>

</android.support.constraint.ConstraintLayout>
