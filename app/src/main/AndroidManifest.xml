<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shopping.collaborator.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.shopping.collaborator.app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shopping.collaborator.app.LoginActivity"
            android:label="Login" />
        <activity
            android:name="com.shopping.collaborator.app.SignUpPage"
            android:label="Sign Up Page" />
        <activity android:name="com.shopping.collaborator.app.GroupsActivity" />
        <activity android:name="com.shopping.collaborator.app.ItemsActivity" />
        <activity android:name="com.shopping.collaborator.app.UsersInGroupActivity" />
        <activity android:name="com.shopping.collaborator.app.EditAccountInfo" />

        <service
            android:name="com.shopping.collaborator.app.GroupService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.shopping.collaborator.app.ItemService"
            android:exported="false"></service>
    </application>

</manifest>